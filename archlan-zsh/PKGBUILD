pkgname=archlan-zsh
pkgver=1.0
pkgrel=3
pkgdesc="Base Configurations for ArchLan"
url="https://github.com/archlan/archlan-skel"
arch=('any')
license=('GPL3')
makedepends=()
depends=(zsh)
conflicts=()
groups=('archlan-de')
provides=("${pkgname}")
options=(!strip)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	local _skeldir=$HOME

	mkdir -p "$_skeldir"

	# Copy files

	cp -r ${srcdir}/.zsh				"$_skeldir"
	install -Dm 644 .zshrc				"$_skeldir"/.zshrc
	install -Dm 644 .zshenv				"$_skeldir"/.zshenv
}